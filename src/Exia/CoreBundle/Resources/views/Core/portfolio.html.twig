{% extends 'ExiaCoreBundle::layout.html.twig' %}
{% block body %}
<h1 class="page-header">{% trans %}portfolio.utilisateur{% endtrans %}  {{ profil.nom }}
        {{ profil.prenom }}</h1>
    <div id="personnalisation">
        <img src="{{ profil.illustration }}" alt="Illustration">
        <p id="message">{{ profil.message }}</p>
    </div>
<h1 class="page-header">{% trans %}portfolio.profil{% endtrans %}</h1>
    <div id="coordonnees">
        {{ profil.adresse }}
        {{ profil.mail }}
        0{{ profil.tel }}
    </div>
<h1 class="page-header">{% trans %}portfolio.experiences{% endtrans %}</h1>    
    <div id="experiences">
        {% for experience in experiences %}
            <tr>
                <td>{{ experience.annee }}</td>
                <td>{{ experience.entreprise }}</td>
                <td>{{ experience.lieu }}</td>
                <td>{{ experience.poste }}</td>
                <td>{{ experience.detail }}</td>
            </tr>
        {% endfor %}
    </div>
<h1 class="page-header">{% trans %}portfolio.formations{% endtrans %}</h1>  
    <div id="formations">
        {% for formation in formations %}
            <tr>
                <td>{{ formation.annee }}</td>
                <td>{{ formation.titre }}</td>
                <td>{{ formation.lieu }}</td>
                <td>{{ formation.diplome }}</td>
                <td>{{ formation.descriptif }}</td>
            </tr>
        {% endfor %}
    </div>
<h1 class="page-header">{% trans %}portfolio.projets{% endtrans %}</h1>  
    <div id="projets">
        {% for projet in projets %}
            <tr>
                <td><img src="{{ projet.illustration }}" alt="IllustrationProjet"></td>
                <td>{{ projet.nom }} </td>
                <td>{{ projet.description }}</td>
                <td>{{ projet.lien }}</td>
                <td>{{ projet.telechargement }}</td>
            </tr>
        {% endfor %}
    </div>
<h1 class="page-header">{% trans %}portfolio.competences{% endtrans %}</h1> 
    <div id="competences">
        {% for competence in competences %}
            
                <tr>
                    <td>{{ competence.categorieCompetences.categorie }} </td>
                    <td>{{ competence.nom }}</td>
                    <td>{{ competence.niveau }}</td>
                </tr>
            
        {% endfor %}
    </div>
{% endblock %}
